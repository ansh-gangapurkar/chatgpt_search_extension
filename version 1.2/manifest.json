{
  "manifest_version": 3,
  "name": "ChatGPT Search Bar: Instantly Search Your Chat Logs",
  "version": "1.2",
  "description": "A Chrome extension to search through ChatGPT chats",
    "permissions": [
      "storage"
    ],
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "/icons/512.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["inject-search-bar.js"],
      "css": ["injected-styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "/icons/16.png",
    "32": "/icons/32.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png",
    "256": "/icons/256.png",
    "512": "/icons/512.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["instructions.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
